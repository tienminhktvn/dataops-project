[sqlfluff]
templater = dbt
dialect = tsql
exclude_rules = L003,L009,L016,L031,L034,L036,AL01,AL09,RF04,ST01,ST02,ST04,LT03,CP01,CP02,CP03,LT01
max_line_length = 120

[sqlfluff:indentation]
tab_space_size = 4
indent_unit = space

[sqlfluff:layout:type:comma]
spacing_before = touch
spacing_after = single

[sqlfluff:templater:dbt]
project_dir = ./dbt
profiles_dir = ./dbt 
profile = dataops_project
target = ci